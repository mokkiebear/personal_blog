{
    "compilerOptions": {
        // Set React as the JSX factory
        "jsx": "react",
        // Target ES6 for more modern browsers
        "target": "es6",
        // Include module source maps for debugging
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
    },
    "include": [
        "src/*"
    ],
}